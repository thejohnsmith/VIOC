<section id="careers" class="mustache-template col-sm-6 clearfix form-section">
    <style for="basic-details">
        #tab-details {
            margin-top: 22px;
        }
    </style>

    <style for="main.css">
        ::-webkit-input-placeholder { /* Chrome */
            color: #ccc !important;
        }

        :-ms-input-placeholder { /* IE 10+ */
            color: #ccc !important;
        }

        ::-moz-placeholder { /* Firefox 19+ */
            color: #ccc !important;
            opacity: 1;
        }

        :-moz-placeholder { /* Firefox 4 - 18 */
            color: #ccc !important;
            opacity: 1;
        }

        .edit-card {
            margin-right: 0;
            margin-left: 0;
            background-color: #fff;
            border-color: #ddd;
            border-width: 1px;
            border-radius: 4px;
            -webkit-box-shadow: 0px 2px 2px rgba(0,0,0,.10);
            box-shadow: 0px 2px 2px rgba(0,0,0,.10);
            border: 1px solid #ddd;
            padding: 20px;
            width: 75%;
        }

        .edit-card-header {
            margin-top: 0px;
            margin-bottom: 16px;
        }
    </style>
    <style for="this-page-only">
        #tab-careers .section-header {
            margin-top: 8px !important;
            margin-bottom: 8px !important;
        }

        #tab-careers .career-template {
            background-color: #E7E7E7;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 20px;
        }

        #tab-careers .label-text {
            font-weight: bold;
        }

            #tab-careers .label-text small {
                font-weight: normal;
            }

        #tab-careers .radio {
            margin-bottom: 12px;
            margin-top: 4px;
        }

            #tab-careers .radio input[type=radio] {
                margin-top: 4px;
            }

        #tab-careers .storeCareersList {
            width: 75%;
        }
    </style>
    <div class="row" id="careersdiv" style="display: none">
        <div class="col-xs-12">
            <h2 class="section-header">Careers</h2>
            <div class="display-inline-block storeCareersList">
                <section class="resp-tab-content-section">
                    <!--  This toggled the hidden items.
                        Used 1st by StorePagesController.js
                        - John Smith
                      -->
                    <small>
                        <a href="#sortable" role="button" class="pull-right display-inline storeCareersShowAll" aria-hidden="false">
                            Show All
                        </a>
                    </small>
                    <div id="mustacheTableHtml"></div>
                    <script id="mustache-template" type="text/template">
                        <table id="storeCareerTable" class="full-width">
                            <tbody id="sortable-false" class="full-width">
                                <tr class="table-banner">
                                    <th class="table-banner-item text-left">
                                        Title
                                    <th class="table-banner-item text-left">
                                        Link
                                    </th>
                                    <th class="table-banner-item">
                                        Active
                                    </th>
                                    <th class="table-banner-item">
                                        Edit
                                    </th>
                                    <th class="table-banner-item">
                                        Delete
                                    </th>
                                    {{#rows}}
                                    <tr draggable="false" class="{{#hide}}none{{/hide}} filterable careerItem text-center careerItemActive" data-enrolled="true" data-id="{{id}}">
                                        <td class="list-item text-left">
                                            <small>
                                                {{title}}
                                            </small>
                                        </td>
                                        <td class="list-item text-left">
                                            <small>
                                                <a href="{{link}}" target="_blank">{{link}}</a>
                                            </small>
                                        </td>
                                         <td class="list-item">
											{{#isArchived}}<a class="archive-link" data-id="{{id}}" href="#">Unarchive</a>{{/isArchived}}
											{{^isArchived}}<a class="archive-link" data-id="{{id}}" href="#">Archive</a>{{/isArchived}}
                                        </td>
                                       <td class="list-item">
                                            <button type="button" alt="Edit Offer Details" class="editbuttoncareers icon icon-edit-bg"></button>
                                        </td>
                                        <td class="deleteNewsEventPromotion list-item">
                                            <button type="button" alt="Delete Offer" class="deletebuttoncareers icon icon-delete-bg"></button>
                                        </td>
                                    </tr>
                                {{/rows}}
                            </tbody>
                        </table>
                    </script>
                </section>
            </div>
            <br>
            <div class="form-controls">
                <div class="clearfix form-item">
                    <button class="btn btn-primary btn-sm display-block" name="addCareer" id="addcareerbutton" type="button" data-toggle="collapse" data-target="#collapseCareersForms" aria-expanded="false" aria-controls="collapseCareersForms">
                        Add Career
                    </button>
                </div>
            </div>

            <div class="storeCareersForm accordion-body collapseCareersForms collapse edit-card" id="collapseCareersForms" style=" display: none;">

                <h2 class="edit-card-header" id="careerformbanner">New Career</h2>

                <div class="clearfix form-item career-template">
                    <label class="label-text" for="Templates">
                        Premade Career Templates
                        <small class="small display-block">Select a template to use as a starting point for a new career entry.</small>
                    </label>
                    <!-- <input class="" value="" placeholder="Select..." type="text" name="Templates" id="Templates"> -->
                    <select name="Templates" id="Templates">
                        <option selected="selected">
                            Select...
                        </option>
                        <option>
                            Assistant Manager
                        </option>
                        <option>
                            Automotive Technician
                        </option>
                        <option>
                            Customer Service Advisor
                        </option>
                        <option>
                            Service Center Manager
                        </option>
                        <option>
                            Missouri State Inspector/Automotive Technician
                        </option>
                        <option>
                            Missouri State Inspector/Assistant Manager
                        </option>
                    </select>
                </div>


                <div class="row">
                    <div class="col-sm-6">
                        <div class="clearfix form-item">
                            <label class="label-text" for="JobTitle">
                                Job Title
                            </label>
                            <div class="characterLimit">
                                <!-- Use the Character Limit plugin -->
                                <textarea data-maxlength="140" class="characterLimitInput resize-false" placeholder="" rows="1" cols="80" id="JobTitle" name="JobTitle"></textarea>
                            </div>
                        </div>
                        <div class="clearfix form-item">
                            <label class="label-text" for="JobDescription">
                                Job Description
                            </label>
                            <div class="characterLimit">
                                <!-- Use the Character Limit plugin -->
                                <textarea data-maxlength="1000" class="characterLimitInput" placeholder="" rows="6" cols="80" id="JobDescription" name="JobDescription"></textarea>
                            </div>
                        </div>
                        <div class="form-controls">
                            <div class="clearfix form-item">
                                <button id="buttonsavecareer" class="btn btn-primary btn-lg display-inline" name="removeNewsEvent" type="button" data-toggle="collapse" data-target="#collapseNewsEventForms" aria-expanded="false" aria-controls="collapseNewsEventForms">
                                    Save
                                </button>
                                <button id="buttoncancelcareer" class="btn btn-primary btn-lg display-inline" name="removeNewsEvent" type="button"  aria-expanded="false" aria-controls="collapseNewsEventForms">
                                    Cancel
                                </button>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-6">
                        <div class="clearfix form-item">
                            <label class="label-text" for="JobDescription">
                                Application Instructions
                                <small class="small display-block">Select how visitors can request more info or apply - via a URL to an external site, by sending an email to a specific address, or by walking in to the store.</small>
                            </label>
                            <div style="margin: 12px 0px 8px 0px;">Requesting more info will :</div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="optionsRadios" id="optionsRadios1" value="link" checked>
                                    Take the visitor to the following link: <input type="text" id="thelink" placeholder="http://www.yourcompany.com/yourlink">
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="optionsRadios" id="optionsRadios2" value="email">
                                    Open an email to: <input type="text" placeholder="manager@yourstore.com" id="emailto">
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="optionsRadios" id="optionsRadios3" value="store">
                                    Tell the visitor: <textarea data-maxlength="200" id="tellthevisitor" class="characterLimitInput" rows="3" placeholder="Visit our store between 2PM and 5pm daily to speak with a manager."></textarea>
                                </label>
                            </div>
                        </div>

                    </div>
                </div>


            </div>
            <!-- /box-grey -->
        </div>
    </div>
</section>
